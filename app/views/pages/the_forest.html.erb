    /* === Parallaxe sections === */
    .parallax-section {
      position: relative;
      min-height: 100vh;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: clamp(4rem, 8vw, 6rem) 5vw;
      overflow: hidden;
      background: var(--bg);
      --photo: none;
      --bg-overlay-top: linear-gradient(180deg, rgba(11, 15, 13, 0.22) 0%, rgba(11, 15, 13, 0.92) 95%);
      --bg-overlay-accent: linear-gradient(0deg, rgba(11, 15, 13, 0.55) 0%, rgba(11, 15, 13, 0.05) 55%);
      scroll-margin-top: 120px;
    }

    .parallax-section + .parallax-section {
      margin-top: -18vh;
      padding-top: calc(18vh + clamp(4rem, 8vw, 6rem));
    }

    .parallax-section .bg {
      position: absolute;
      top: -24vh;
      left: 0;
      width: 100%;
      height: calc(100% + 48vh);
      background-image: var(--bg-overlay-top), var(--bg-overlay-accent), var(--photo);
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
      background-blend-mode: overlay, screen, normal;
      will-change: background-position;
      transform: translate3d(0, 0, 0);
      filter: saturate(1.05) contrast(0.96);
      z-index: 0;
    }

    .parallax-section .bg::before,
    .parallax-section .bg::after {
      content: "";
      position: absolute;
      left: 0;
      width: 100%;
      height: 28vh;
      pointer-events: none;
      z-index: 1;
    }

    .parallax-section .bg::before {
      top: 0;
      background: linear-gradient(to bottom, rgba(11, 15, 13, 0.85) 0%, rgba(11, 15, 13, 0) 100%);
      opacity: 0.6;
    }

    .parallax-section .bg::after {
      bottom: 0;
      background: linear-gradient(to top, rgba(11, 15, 13, 0.95) 0%, rgba(11, 15, 13, 0) 100%);
      opacity: 0.75;
    }

    .parallax-section::before,
