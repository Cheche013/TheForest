<script>
document.addEventListener("DOMContentLoaded", () => {
  const audio = document.getElementById("forest-audio");
  const btn   = document.querySelector(".audio-toggle");
  const TARGET = 0.3; // volume doux

  // helper: transition de volume
  const fadeTo = (target, ms) => {
    const step = (target - audio.volume) / Math.max(ms / 50, 1);
    const id = setInterval(() => {
      audio.volume = Math.max(0, Math.min(1, audio.volume + step));
      const doneUp   = step > 0 && audio.volume >= target;
      const doneDown = step < 0 && audio.volume <= target;
      if (doneUp || doneDown) { audio.volume = target; clearInterval(id); }
    }, 50);
  };

  // toggle au clic : d√©marre en fondu, coupe en fondu
  btn.addEventListener("click", async () => {
    if (audio.paused || audio.muted || audio.volume === 0) {
      try {
        audio.muted = false;       // d√©-mute autoris√© car dans un handler user
        audio.volume = 0;          // d√©part silencieux
        await audio.play();        // lecture garantie (interaction utilisateur)
        fadeTo(TARGET, 600);       // fondu d'entr√©e
        btn.querySelector("span").textContent = "Silence";
        btn.setAttribute("aria-pressed", "true");
      } catch (e) {
        console.warn("Lecture bloqu√©e :", e);
      }
    } else {
      fadeTo(0, 400);              // fondu de sortie
      setTimeout(() => { audio.pause(); audio.muted = true; }, 420);
      btn.querySelector("span").textContent = " Listen";
      btn.setAttribute("aria-pressed", "false");
    }
  });
});
</script>


